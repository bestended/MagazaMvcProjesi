@model MagazaMvcProjesi.Models.WashingMachine
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div style="margin-left:150px;">
    <h2>Washmachine Adding Screen</h2>
</div>
<br />


@using (Html.BeginForm())
{
    <div style="margin-left:150px;">
        <div class="form-horizontal">

            @Html.LabelFor(i => i.capacity)
            <div class="col-md-4 mt-2">
                @Html.TextBoxFor(i => i.capacity, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-horizontal mt-3">

            @Html.LabelFor(i => i.spinCycle)
            <div class="col-md-4 mt-2">
                @Html.TextBoxFor(i => i.spinCycle, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-horizontal mt-3">

            @Html.LabelFor(i => i.machineColor)
            <div class="col-md-4 mt-2">
                @Html.TextBoxFor(i => i.machineColor, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-horizontal mt-3">

            @Html.LabelFor(i => i.energiesClass)
            <div class="col-md-4 mt-2">
                @Html.TextBoxFor(i => i.energiesClass, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-horizontal mt-3">

            @Html.LabelFor(i => i.washPrice)
            <div class="col-md-4 mt-2">
                @Html.TextBoxFor(i => i.washPrice, new { @class = "form-control" })
            </div>
        </div>



        <div class="form-group mt-3">

            @Html.LabelFor(i => i.dealerId, "dealerId")


            <div class="row-cols-sm-3 mt-2">
                @Html.DropDownListFor(x => x.dealerId, (List<SelectListItem>)ViewBag.veri)
            </div>

        </div>

        <div class="form-group mt-3">

            @Html.LabelFor(i => i.customerId, "customerId")


            <div class="row-cols-sm-3 mt-2">
                @Html.DropDownListFor(x => x.customerId, (List<SelectListItem>)ViewBag.data)
            </div>

        </div>



        <div class="form-group mt-3">
            <input type="submit" value="ADD" class="btn btn-primary" />
        </div>
    </div>
}





