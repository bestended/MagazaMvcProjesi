@model IEnumerable<MagazaMvcProjesi.Models.WashingMachine>
@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}



<div class="form" style="margin-left:500px;">
    <div style="width:500px; margin-bottom:10px;">
        @Html.ActionLink("Çamaşır Makinesi Ekleme", "Ekle", null, new { @class = "btn btn-primary" })
    </div>

    @using (Html.BeginForm("Liste", "CamasirMakinesi"))
    {
        <div style="margin-bottom: 5px; margin-top: 20px;">
            @Html.RadioButton("searchBy", "machineColor", true) <text>Makine rengi</text>
        </div>
        <div style="margin-bottom: 1px; margin-top:10px;">
            @Html.RadioButton("searchBy", "energiesClass") <text>Enerji Sınıfı</text>
        </div>
        <br />
        <div style="margin-bottom: 10px; width:180px;">
            @Html.TextBox("search")
        </div>
        <div>
            <input type="submit" value="Arama" style="width:180px; margin-bottom:10px;" />
        </div>


    }

</div>





<table class="table">
    <tr>
        <th>Kapasite</th>
        <th>Devir Sayısı</th>
        <th>Makine Rengi</th>
        <th>Enerji Sınıfı</th>
        <th>Makine Fiyatı</th>
        <th>Bayi No</th>
        <th>Müşteri No</th>

    </tr>



    @foreach (var item in Model)
    {

        <tr>
            <td>@item.capacity</td>
            <td>@item.spinCycle</td>
            <td>@item.machineColor</td>
            <td>@item.energiesClass</td>
            <td>@item.washPrice</td>
            <td>@item.dealerId</td>
            <td>@item.customerId</td>

            <td>
                @Html.ActionLink("Güncelle", "Güncelle", new { id = item.washId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Sil", "Sil", new { id = item.washId }, new { @class = "btn btn-danger" })
            </td>


        </tr>




    }



</table>







