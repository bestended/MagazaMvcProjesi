@model MagazaMvcProjesi.Models.Customer
@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}



<div style="margin-left:150px;">
    <h2>Customer Edit Screen</h2>
</div>
<br />

@using (Html.BeginForm())
{
    @Html.HiddenFor(a => a.customerId)
    <div style="margin-left:150px;">
        <div class="form-horizontal">

            @Html.LabelFor(i => i.Name)
            <div class="col-md-4 mt-2">
                @Html.TextBoxFor(i => i.Name, new { @class = "form-control" })
            </div>
        </div>



        <div class="form-horizontal mt-3">

            @Html.LabelFor(i => i.Lastname)
            <div class="col-md-4 mt-2">
                @Html.TextBoxFor(i => i.Lastname, new { @class = "form-control" })
            </div>
        </div>


        <div class="form-horizontal mt-3">

            @Html.LabelFor(i => i.Telephone)
            <div class="col-md-4 mt-2">
                @Html.TextBoxFor(i => i.Telephone, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-horizontal mt-3">

            @Html.LabelFor(i => i.Country)
            <div class="col-md-4 mt-2">
                @Html.TextBoxFor(i => i.Country, new { @class = "form-control" })
            </div>
        </div>



        <div class="form-horizontal mt-3">

            @Html.LabelFor(i => i.City)
            <div class="col-md-4 mt-2">
                @Html.TextBoxFor(i => i.City, new { @class = "form-control" })
            </div>
        </div>

        <div>
            @Html.LabelFor(i => i.purchaseDate)
            <div>
                @Html.EditorFor(i => i.purchaseDate, new { htmlAttributes = new { type = "date" } })
            </div>

        </div>


        <div class="radio">
            <div>
                @Html.LabelFor(i => i.gender)
                <div>
                    @Html.RadioButtonFor(i => i.gender, true) Kadın

                </div>
                <div>
                    @Html.RadioButtonFor(i => i.gender, false) Erkek
                </div>

            </div>

        </div>


        <div class="form-group mt-3">
            <input type="submit" value="EDIT" class="btn btn-warning" />
        </div>
    </div>
}





