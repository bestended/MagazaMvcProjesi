@model IEnumerable<MagazaMvcProjesi.Models.Customer>
@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


@Html.ActionLink("Müşteri Ekleme", "Ekle", null, new { @class = "btn btn-primary" })


<h2>Aranacak müşteri adını girin</h2>
@using (Html.BeginForm("Liste", "Müsteriler"))
{


    @Html.TextBox("x");


    <input type="submit"  value="Arama" />

}


<table class="table">
    <tr>
        <th>Müşteri Adı</th>
        <th>Soyadı</th>
        <th>Telefonu</th>
        <th>Ülke</th>
        <th>Şehir</th>
        <th>Satın Alma Tarihi</th>
        <th>Cinsiyet</th>


    </tr>



    @foreach (var item in Model)
    {

        <tr>
            <td>@item.Name</td>
            <td>@item.Lastname</td>
            <td>@item.Telephone</td>
            <td>@item.Country</td>
            <td>@item.City</td>
            <td>@item.purchaseDate</td>
            <td>
                @if (item.gender == true)
                {

                    <span>Kadın  </span>
                }
                else
                {
                    <span>Erkek  </span>
                }


            </td>
          




            <td>
                @Html.ActionLink("Güncelle", "Güncelle", new { id = item.customerId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Sil", "Sil", new { id = item.customerId }, new { @class = "btn btn-danger" })
            </td>


        </tr>




    }



</table>







